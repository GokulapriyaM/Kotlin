<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.manikandan.samplekotlinproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.manikandan.samplekotlinproject.SimpleListViewActivity"/>
        <activity android:name="com.manikandan.samplekotlinproject.RecyclerViewActivity"/>
        <activity android:name="com.manikandan.samplekotlinproject.NavigationDrawerActivity"/>
        <activity android:name="com.manikandan.samplekotlinproject.TabLayoutActivity"/>
        <activity android:name="com.manikandan.samplekotlinproject.BottomSheetActivity"/>
        <activity android:name="com.manikandan.samplekotlinproject.AlertDialogActivity"/>
    </application>

</manifest>